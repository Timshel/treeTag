# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page

GET     /                               controllers.Application.index()
GET     /:name                          controllers.Application.indexTag(name: String)

POST    /api/tag/:name                  controllers.Application.tagCreate(name: String)
DELETE  /api/tag/:name                  controllers.Application.tagDelete(name: String)
PUT     /api/tag/:name/tag/:tag         controllers.Application.tagTag(name: String, tag: String)

POST    /api/article                    controllers.Application.articleCreate
PUT     /api/article/:uuid              controllers.Application.articleUpdate(uuid: String)
DELETE  /api/article/:uuid              controllers.Application.articleDelete(uuid: String)
PUT     /api/article/:uuid/tag/:tag     controllers.Application.articleTag(uuid: String, tag: String)

GET     /api/nodes/:name                controllers.Application.fetchTag(name: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
